<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relativeLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TableLayout android:layout_width="fill_parent"
        android:layout_height="fill_parent"

        android:background="@color/orange">


        <TableRow>
            <ImageButton
                android:id="@+id/buttonIm0"
                android:padding="15px"
                android:layout_marginTop="40px"
                android:layout_marginLeft="40px"
                android:background="@color/orange"
                android:src="@mipmap/question_300x299"
                android:onClick="onClickImBtn0"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"

                />
            <ImageButton android:id="@+id/buttonIm1"
                android:padding="8dp"

                android:layout_marginTop="40px"
                android:layout_marginRight="40px"
                android:background="@color/orange"

                android:src="@mipmap/question_300x299"
                android:onClick="onClickImBtn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_column="1"

                />
        </TableRow>
           </TableLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <Button android:onClick="onButtonClick01"
            android:id="@+id/buttonClick_quiz"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/buttonIm0"


            android:text="@string/play" />
    </LinearLayout>

</RelativeLayout>
